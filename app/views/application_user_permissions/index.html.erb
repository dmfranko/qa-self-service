<div class="page-header">
	<h1>Application User Permissions</h1>
</div>

<table class="table table-striped table-bordered" id="example">
	<tr>
		<th>Application</th>
		<th>User Name</th>
		<th>User ID</th>
		<th></th>
	</tr>
	<% @permissions.each do |a| %>
	<tr>
		<td><%= a.application.name %></td>
		<td><%= a.user.user_name %></td>
		<td><%= a.user.netid %></td>
		<td>
			<%= button_to application_user_permission_path(a),:method => :delete, :data => { :confirm => 'Are you sure you want to delete this user?' }  do %>
				<span class="glyphicon glyphicon-remove"></span>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>

<%= link_to "New Permission", new_application_user_permission_path,class: "btn btn-large btn-primary" %>