  		if ($("#filterOption option:selected").text() === "all"){
  			// Everyone back to the party
  			search = searchList
  		}
  		else{
  			search = [$("#filterOption option:selected").text()]
  		}
	});
	
	var options = {
		valueNames : search,
		page : 5,
		plugins : [ListPagination({})]
	};

