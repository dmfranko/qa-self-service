	<div class="page-header">
		<h1>App update<small>Manage your app attributes</small></h1>
	</div>
	<div class="form-group">
		<div class="span6 offset3">
			<%= form_for(@app) do |f| %>
				<%= f.label :name %>
				<%= f.text_field :name,:class => "form-control" %>
				<br />
				<%= f.label :description %>
				<%= f.text_field :description,:class => "form-control" %>
				<br />
				<%= f.label :github_url %>
				<%= f.text_field :github_url,:class => "form-control"  %>
				<br />
				<%= f.label :envs %>
				<%= f.text_field :envs,:class => "form-control" %>
				<br />
				<%= f.label :default_emails %>
				<%= f.text_field :default_emails,:class => "form-control" %>
				<br />
				<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<% end %>
			<br />
			<%= link_to "Cancel", apps_path,:class => "btn btn-warning" %>
		</div>
	</div>
