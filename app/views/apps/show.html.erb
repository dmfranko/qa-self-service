<h1>Application Details</h1>
<h3>Github location</h3>
<p>
	<%= @app.github_url %>
</p>

<h3>Tags</h3>
<ul class="list-group">
	<% @tags.each do |t|%>
	<li class="list-group-item">
		<%= t.tag %>
	</li>
	<% end %>
</ul>

<h3>Environments</h3>
<ul class="list-group">
	<% @environments.each do |environment|%>
	<li class="list-group-item">
		<%= environment.environment_name %> : <%= environment.environment_url %>
	</li>
	<% end %>
</ul>

<% if @app.default_emails %>
<h3>Emails</h3>
<ul class="list-group">
	<% @app.default_emails.each do |email|%>
	<li class="list-group-item">
		<%= email %>
	</li>
	<% end %>
</ul>
<% end %>

<% if @users %>
<h3>Users</h3>
<ul class="list-group">
	<% @users.each do |user|%>
	<li class="list-group-item">
		<%= user.netid %>
	</li>
	<% end %>
</ul>
<% end %>

<%= link_to 'Back', apps_path,:class => "btn btn-default" %>
