<div class="container">
	<div class="page-header">
		<h1>Platforms <small>from sauce</small></h1>
	</div>

	<div class="alert alert-success">Platforms loaded!</div>

	<table class="table table-striped table-bordered" id="example">
		<tr>
			<th>Browser</th>
			<th>Version</th>
			<th>OS</th>
		</tr>
		<% @platforms.each do |p| %>
		<tr>
			<td><%= p["long_name"] %></td>
			<td><%= p["long_version"] %></td>
			<td><%= p["os"] %></td>
		</tr>
		<% end %>
	</table>
</div>
