<%= link_to "Capture Screenshots", new_screenshot_path ,:class => "btn btn-success" %>
<br />
<br />
<div class="">
	<table class="table table-striped table-bordered">
		<tr>
			<th class="hidden-xs">Date</th>
			<th>status</th>	
			<th>url</th>			
			<th>details</th>
			<th class="hidden-xs">platform count</th>
		</tr>

		<% if @s.count == 0 %>
			<div class="alert alert-info alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				You haven't used this yet, give it a shot!
			</div>

			<% end %>

			<% @s.each do |s| %>
			<tr>
			<td class="hidden-xs"><%= s.created_at.localtime.strftime('%D %r') %></td>
			<td>Running</td>
			<td><%= link_to s.url,s.url,target: "_blank" %></td>
			<td><%= link_to screenshot_path(s), :class => 'button white' do %> <span class="glyphicon glyphicon-list-alt"></span> <% end %> </td>
			<td class="hidden-xs"><%= s.screen_images.count %></td>
			</tr>
			<% end %>
	</table>
</div>
<%= link_to "Home", root_path,:class => "btn btn-default" %>