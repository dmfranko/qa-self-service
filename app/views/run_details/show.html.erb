<div class="container">
	<%= link_to "Back", runs_path, class: "btn btn-default" %>
	<div class="page-header">
		<h1>Run details for #{app name}</h1>
	</div>
	
	<script>
	$(function () {
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Test results'
        },
        tooltip: {
          pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    color: '#000000',
                    connectorColor: '#000000',
                    format: '<b>{point.name}</b>: {point.y}'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Percentage',
            data: [
                ['Passed',   <%= @counts["Passed"] %>],
                ['Failed',   <%= @counts["Failed"] %>],
                ['Pending',  <%= @counts["Pending"] %>]
            ]
        }]
    });
});
</script>
	<div class="row">
  		<div class="col-md-8">
			<ul class="list-group">
			  	<a class="list-group-item">
			    	<h5 class="list-group-item-heading">Time</h5>
			    	<p class="list-group-item-text">Date and duration</p>
			  	</a>
			    <a class="list-group-item">
			    	<h5 class="list-group-item-heading">Platforms</h5>
			    	<p class="list-group-item-text">Linux</p>
			  	</a>
			    <a class="list-group-item">
			    	<h5 class="list-group-item-heading">Filter</h5>
			    	<p class="list-group-item-text">*</p>
			  	</a>
			 	<a class="list-group-item">
			    	<h5 class="list-group-item-heading">Sauce url</h5>
			    	<p class="list-group-item-text">http://saucelabs.com</p>
			  	</a>
			</ul>
  		</div>
 	 	<div class="col-md-4" id="container" style="min-width: 310px; height: 300px; margin: 0 auto"></div>
	</div>
	
	<div class="alert alert-danger">
		There are no results for some reason :(?
	</div>

	<div id="users">
		  <input class="search" placeholder="Search" />
  <button class="sort" data-sort="name">
    Sort
  </button>
		<ul class="list-group list">
			<% @tree.roots.each do |t| %>
				<%= nested_messages t.subtree.arrange %>
			<% end %>
		</ul>
	</div>
	
	
<script>	
var options = {
  valueNames: [ 'name', 'born','panel-title' ]
};

var userList = new List('users', options);
</script>
	
	<%= link_to "Back", runs_path, class: "btn btn-default" %>
</div>