<div class="page-header">
	<h1>Users</h1>
</div>

<%= link_to "Add User", new_user_path ,:class => "btn btn-success" %>

<br />
<br />
<table class="table table-striped table-bordered" id="example">
	<tr>
		<th>Name</th>
		<th>Netid</th>
		<th>Admin</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @u.each do |r| %>
	<tr>
		<td><%= r.user_name %></td>
		<td><%= r.netid %></td>
		<td><%= r.is_administrator == 1 ? "Yes" : "No"  %></td>
		<td style="text-align:center"> <%= link_to edit_user_path(r), :class => 'button white' do %> <span class="glyphicon glyphicon-list-alt"></span> <% end %> </td>
		<td style="text-align:center"><%= link_to user_path(r), :class => 'some_class', :method => :delete, :data => { :confirm => 'Are you sure you want to delete this app?' }  do %>
  			<span class="glyphicon glyphicon-remove"></span>
		<% end %>
		</td>
	</tr>
	<% end %>
</table>
